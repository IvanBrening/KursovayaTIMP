# Makefile для генерации документации с использованием Doxygen

# Указываем название конфигурационного файла Doxygen
DOXYGEN_CONF = conf

# Папка, куда будет генерироваться документация
DOCS_DIR = docs

# Папка с исходным кодом
SRC_DIR = .

# Цель по умолчанию - сгенерировать документацию
all: doc

# Генерация документации с помощью Doxygen
doc:
	@echo "Генерация документации с использованием Doxygen..."
	@doxygen $(DOXYGEN_CONF)

# Очистка сгенерированной документации
clean:
	@echo "Удаление сгенерированных файлов документации..."
	@rm -rf $(DOCS_DIR)

# Фиксируем переменные для удобства использования
.PHONY: all doc clean
